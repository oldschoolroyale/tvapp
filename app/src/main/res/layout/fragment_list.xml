<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ListFragment"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1a143a">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            style="@style/TextAppearance.AppCompat.Headline"
            android:text="Рекомендуем вам посмотреть"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentListRecycler"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            style="@style/TextAppearance.AppCompat.Headline"
            android:text="Самая высокая оценка по версии IMDB"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentListBestMoviesRecycler"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            style="@style/TextAppearance.AppCompat.Headline"
            android:text="Лучшие актеры по версии IMDB"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentListBestPerson"/>
    </LinearLayout>



</ScrollView>